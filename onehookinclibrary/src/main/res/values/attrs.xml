<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlipperView">
        <attr name="viewRes" format="reference"></attr>
        <attr name="bottomPageTranslationY" format="dimension|reference"></attr>
        <attr name="bottomPageScale" format="float|reference"></attr>
    </declare-styleable>

    <declare-styleable name="VerticalSeekBar">
        <attr name="onlyThumb" format="boolean" />
        <attr name="customThumb" format="reference" />
    </declare-styleable>

    <declare-styleable name="StackLayout">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="alignment" format="enum">
            <enum name="left_or_top" value="0" />
            <enum name="center" value="1" />
            <enum name="right_or_bottom" value="2" />
        </attr>
        <attr name="equalToMax" format="boolean"></attr>
        <attr name="distributeToEdge" format="boolean"></attr>
    </declare-styleable>


    <declare-styleable name="OHFlowLayout">
        <attr name="oh_flow_layout_horizontal_margin" format="dimension|reference"></attr>
        <attr name="oh_flow_layout_vertical_margin" format="dimension|reference"></attr>
        <attr name="oh_flow_layout_vertical_align_type" format="enum">
            <enum name="center" value="0" />
            <enum name="bottom" value="1" />
            <enum name="top" value="2" />
        </attr>
        <attr name="oh_flow_layout_horizontal_align_type" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="OHPagerIndicator">
        <attr name="oh_pager_indicator_selected_color" format="color|reference"></attr>
        <attr name="oh_pager_indicator_default_color" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="AnimatedProgressView">
        <attr name="oh_progress_view_primary_color" format="color|reference" />
        <attr name="oh_progress_view_base_color" format="color|reference" />
        <attr name="oh_progress_view_text_color" format="color|reference" />
        <attr name="oh_progress_view_circile_background_color" format="color|reference" />
        <attr name="oh_progress_view_progress" format="float" />
        <attr name="oh_progress_view_bottom_ring_progress" format="float" />
        <attr name="oh_progress_view_stroke_ratio" format="float" />
        <attr name="oh_progress_view_show_percentage" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ScaleView">
        <attr name="oh_scale_view_scale_color" format="color|reference" />
        <attr name="oh_scale_view_indicator_color" format="color|reference" />
        <attr name="oh_scale_view_thick_bar_thickness" format="dimension|reference" />
        <attr name="oh_scale_view_thin_bar_thickness" format="dimension|reference" />
        <attr name="oh_scale_view_scale_interval_count" format="integer|reference" />
        <attr name="oh_scale_view_scale_interval_length" format="dimension|reference" />
        <attr name="oh_scale_view_minimum_scale" format="integer|reference" />
        <attr name="oh_scale_view_maximum_scale" format="integer|reference" />
        <attr name="oh_scale_view_current_scale" format="integer|reference" />
        <attr name="oh_scale_view_pan_direction_natural" format="boolean" />
        <attr name="oh_scale_view_maximum_line_height" format="dimension|reference"></attr>
        <attr name="oh_scale_view_indicator_width" format="dimension|reference"></attr>
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="oh_triggerOffset" format="float" />
        <attr name="oh_flingFactor" format="float" />
        <attr name="oh_singlePageFling" format="boolean" />
        <attr name="oh_overlap_ratio" format="float" />
        <attr name="oh_overlap_amount" format="dimension" />
        <attr name="oh_last_item_fully_fill" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="OHIconProgressView">
        <attr name="oh_icon_progress_view_icons" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="CountDownTimerTextView">
        <attr name="oh_count_down_timer_format" format="string|reference"></attr>
        <attr name="oh_count_down_timer_interval" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="ShimmerFrameLayout">
        <attr name="auto_start" format="boolean" />
        <attr name="base_alpha" format="float" />
        <attr name="duration" format="integer" />
        <attr name="repeat_count" format="integer" />
        <attr name="repeat_delay" format="integer" />
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1" />
            <enum name="reverse" value="2" />
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0" />
            <enum name="cw_90" value="90" />
            <enum name="cw_180" value="180" />
            <enum name="cw_270" value="270" />
        </attr>
        <attr name="dropoff" format="float" />
        <attr name="fixed_width" format="dimension" />
        <attr name="fixed_height" format="dimension" />
        <attr name="intensity" format="float" />
        <attr name="relative_width" format="float" />
        <attr name="relative_height" format="float" />
        <attr name="shape" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
        </attr>
        <attr name="tilt" format="float" />
    </declare-styleable>
</resources>